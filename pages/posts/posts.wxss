/* pages/posts/posts.wxss */

page {
  background-color: #fafafa;
}

.section {
  width: 100%;
  height: 100rpx;
  background-color: #30a9ff;
  display: flex;
  justify-content: center;
}

.section icon {
  position: absolute;
  left: 27%;
  z-index: 2;
  top: 20rpx;
}

.section input {
  border-radius: 2px;
  width: 600rpx;
  height: 70rpx;
  background-color: #fff;
  font-size: 30rpx;
}

.center {
  text-align: center;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner swiper-item {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner image {
  width: 700rpx;
  height: 270rpx;
}

.detail-border {
  display: flex;
  justify-content: center;
  height: 60rpx;
}

.detail {
  background-color: #e4f3ff;
  height: 50rpx;
  width: 700rpx;
  display: flex;
  justify-content: center;
}

.detail view {
  width: 200rpx;
  display: flex;
  padding-top: 10rpx;
}

.detail image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.detail text {
  font-size: 25rpx;
  color: #30a9ff;
  line-height: 50rpx;
  margin-top: -10rpx;
}

.kind {
  width: 100%;
  height: 430rpx;
  display: flex;
  justify-content: center;
}

.kind swiper {
  width: 700rpx;
  height: 410rpx;
}

.kind swiper-item {
  display: flex;
  /* justify-content: center; */
  flex-wrap: wrap;
}

.kind view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 140rpx;
}

.kind image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

.kind text {
  font-size: 28rpx;
}
.kind .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.kind .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.kind .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: #dcdcdc;
    border-radius: 8rpx
}
.kind .wx-swiper-dot-active::before{
    background:#bbbbbb;   
}
.recommend {
  width: 100%;
  height: 430rpx;
  display: flex;
  justify-content: center;
}

.recommend-child {
  background-color: #fff;
}

.recommend swiper {
  width: 700rpx;
}

.title1 {
  color: #fc8571;
  margin-left: 20rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  font-weight: bold;
}

.recommend-child swiper-item {
  display: flex;
  justify-content: center;
}

.drug {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 210rpx;
  margin-left: 10rpx;
}

.recommend-child image {
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}

.drug-name {
  font-size: 35rpx;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.drug-detail {
  width: 200rpx;
  font-size: 25rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #cdcdcd;
  line-height: 30rpx;
  margin-left: 25rpx;
}

.price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  width: 150px;
  overflow: hidden;
  margin-top: 10px;
  height: 100rpx;
  margin-left: 150rpx;
}

.now-price {
  color: #ff4c44;
  font-size: 16px;
}

.old-price {
  color: #999;
  font-size: 11px;
  text-decoration: line-through;
  margin-left: 5px;
}
.nav view {
  width: 180rpx;
}

.gift-more {
  font-size: 27rpx;
  color: #fc8571;
  margin-left: 400rpx;
  line-height: 100rpx;
}

.activity {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity image {
  width: 330rpx;
  height: 200rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.hot {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hot-child {
  width: 700rpx;
}

.hot-child image {
  width: 300rpx;
  height: 300rpx;
}

.hot-display {
  display: flex;
  justify-content: left;
}

.discount {
  width: 150rpx;
  height: 50rpx;
  background-color: #fc8571;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: -200rpx;
}

.discount text {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #fff;
}

.hot-drug {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 390rpx;
  margin-left: 10rpx;
}

.hot-drug-name {
  font-size: 35rpx;
  text-overflow: ellipsis;
  margin-left: -205rpx;
}

.hot-drug-detail {
  font-size: 25rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #cdcdcd;
  line-height: 30rpx;
  width: 350rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.hot-price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  width: 150px;
  overflow: hidden;
  margin-top: 10px;
  height: 50rpx;
  margin-left: -50rpx;
}
